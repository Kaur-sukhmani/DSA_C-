// Binary Search 
#include<iostream>
using namespace std;
bool binarySearch(int *arr,int s,int e,int k){
    // base case 
    if(s>e){
        return -1;
    }
    if(s==e){
        if(arr[s]==k){
            return true;
        }
    }
    int mid=s+(e-s)/2;
    if(arr[mid]==k){
        return true;
    }
    else if(arr[mid]<k){
        return binarySearch(arr,mid+1,e,k);
    }
    else{
        return binarySearch(arr,s,mid-1,k);
    }
}
int main(){
    int arr[5]={2,4,6,10,14,16};
    int size=6;
    int key=16;
    cout<<"Present or not"<<binarySearch(arr,0,5,key);
    return 0;
}
