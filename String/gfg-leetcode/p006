// Check if a string is a valid shuffle of two distinct strings
#include <iostream>
#include <bits/stdc++.h>
using namespace std;


bool isValidShuffle(const string &str, const string &str1, const string &str2) {
    if(str.length()!=(str1.length()+str2.length())){
        return false;
    }
   string concat = str1 + str2;
    sort(sortedStr.begin(), concat.end());

    // Sort the shuffled string
    string sortedStr = str;
    sort(sortedStr.begin(), sortedStr.end());
    
    return sortedStr==sortedStr;
}
int main() {
    string str, str1, str2;
    cout << "Enter the shuffled string: ";
    cin >> str;
    cout << "Enter the first original string: ";
    cin >> str1;
    cout << "Enter the second original string: ";
    cin >> str2;

    if (isValidShuffle(str, str1, str2)) {
        cout << "The string \"" << str << "\" is a valid shuffle of \"" << str1 << "\" and \"" << str2 << "\"." << endl;
    } else {
        cout << "The string \"" << str << "\" is NOT a valid shuffle of \"" << str1 << "\" and \"" << str2 << "\"." << endl;
    }

    return 0;
}// Check if a string is a valid shuffle of two distinct strings
