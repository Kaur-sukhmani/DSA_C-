// mini calculator of 2 numbers 
#include<stdio.h>
#include<stdlib.h>
int main(){
    int a, b,c, n ;
    printf("Enter the two numbers:");
    scanf("%d %d", &a, &b);
    printf("\n 1. ADD");
	printf("\n 2. SUBTRACT");
	printf("\n 3. MUL");
	printf("\n 4. DIVIDE");
	printf("\n 5. EXIT");\
    printf("\nchoose any number between 1 to 5:");
    scanf("%d", &n);
    switch(n){
        case 1:
            c = a+b;
            break;
        case 2:
            c= a-b;
            break;
        case 3:
            c= a*b;
            break;
        case 4:
            c = a/b;
            break;
        case 5:
            exit(0);
        default:
            printf("Invalid Option. Try Again:");
    }
    printf("\n result:%d",c);
    return 0;
}
